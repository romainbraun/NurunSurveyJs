!!!
html
	head
		meta(charset="utf-8")
		title="Nurun Surveys !"
		link(rel='stylesheet', href='/css/base.css')
		//- script(src='/raphael.js')
		script(src='/socket.io/socket.io.js')
		script(src='/d3.v3.js')
		script(src='/nv.d3.js')
		script(src="/legend.js")
		script(src="/pie.js")
		script(src="/pieChart.js")
		script(src="/utils.js")
		script(src='/result.js')
		link(rel='stylesheet', href='/css/nv.d3.css')
	body
		div.results
			div.header-wrap
				div.header
					img(src="/img/logo-nurun-white.svg")
					h1 !{survey.name}
			div.page-wrap
				if survey.questions[questionNum-1]
					h2(id="question#{questionNum-1}")
						span
							!{questionNum} - 
						!{survey.questions[questionNum-1].name}
					svg(id="test1");
					#answers
						div.wait
							span Waiting for answers...
							img(src="/img/ajax-loader.gif")
				else
					p.
						End of the survey !

				div.actions
					a.next(onclick="nextQuestion();") Next question
			
		
